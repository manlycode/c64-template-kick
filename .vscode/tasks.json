{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Tests",
      "isBackground": true,
      "command": [
        "./bin/kickass-build.sh"
      ],
      "args": [
        "${workspaceFolder}/build/test-suite.prg",
        "${workspaceFolder}/test-suite.asm"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "Run Test (C64Debugger)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Build Tests"
      ],
      "isBackground": true,
      "command": [
        "./bin/c64-debugger.sh"
      ],
      "args": [
        "${workspaceFolder}/build/test-suite.prg",
        "${workspaceFolder}/build/test-suite.sym"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Debug (C64Debugger)",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Build Main"
      ],
      "isBackground": true,
      "command": [
        "./bin/c64-debugger.sh"
      ],
      "args": [
        "${workspaceFolder}/build/main.prg",
        "${workspaceFolder}/build/main.sym"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}